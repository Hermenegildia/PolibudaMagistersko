<Window x:Class="imageViewerALa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Picture Viewer" Height="350" Width="700" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="350*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Label Content="Git hub!" Height="28" Name="labelPath" Width="675"  />
        </StackPanel>
        <Rectangle Grid.Row="1" Fill="#FF293875" />
        <Image Grid.Row="1" Margin="30" Name="imagePicture" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" MouseMove="imagePicture_MouseMove"
               MouseLeftButtonDown="imagePicture_MouseLeftButtonDown" MouseLeftButtonUp="imagePicture_MouseLeftButtonUp" />
        <Canvas Grid.Row="1" Name="CanvasControl"/>
    </Grid>
</Window>
